{
  "short_name": "RepairForm",
  "name": "Service de Réparation d'Appareils",
  "description": "Application permettant aux utilisateurs de soumettre des demandes de réparation pour smartphones, tablettes, et ordinateurs.",
  "id": "https://repairform.app",
  "lang": "fr",
  "launch_handler": {
    "route_to": "auto",
    "navigate_existing_client": "always",
    "client_mode": "navigate"
  },
  "icons": [
    {
      "src": "images/icon-192x192.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "images/icon-512x512.png",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  "start_url": "/",
  "background_color": "#FFFFFF",
  "display": "standalone",
  "scope": "/",
  "theme_color": "#007BFF",
  "orientation": "portrait",
  "screenshots": [
    {
      "src": "screenshot1.png",
      "type": "image/png",
      "sizes": "640x480",
      "label": "Page d'accueil de l'application"
    }
  ],
  "display_override": ["window-controls-overlay"],
  "categories": ["utilities", "productivity"],
  "dir": "auto",
  "iarc_rating_id": "VotreIdentifiantIARC",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.example.app",
      "id": "com.example.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/example-app/id123456789",
      "id": "123456789"
    }
  ],
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+repairform",
      "url": "/protocol-handler?link=%s"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  }
}
